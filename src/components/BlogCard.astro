---
import type { CollectionEntry } from 'astro:content';

interface Props {
	entry: CollectionEntry<'blog'>;
}

const { entry } = Astro.props as Props;
const { title, summary, publishedAt, tags = [], previewImage, previewImageAlt, isVideo = false, videoUrl } = entry.data;
const extractVideoId = (url?: string) => {
	if (!url) return undefined;
	try {
		const short = url.match(/youtu\.be\/([^?]+)/);
		if (short) return short[1];
		const long = url.match(/[?&]v=([^&]+)/);
		if (long) return long[1];
		const embed = url.match(/youtube\.com\/embed\/([^?]+)/);
		if (embed) return embed[1];
	} catch {
		return undefined;
	}
	return undefined;
};
const videoId = isVideo ? extractVideoId(videoUrl) : undefined;
const derivedPreview = isVideo && videoId ? `https://img.youtube.com/vi/${videoId}/hqdefault.jpg` : undefined;

const previewAlt = previewImageAlt ?? `${title} preview image`;
const formattedDate = new Intl.DateTimeFormat('en', {
	month: 'short',
	day: 'numeric',
	year: 'numeric',
}).format(publishedAt);
---

<article class="card">
	{(previewImage || derivedPreview) && (
		<figure class="card-media">
			<img
				src={derivedPreview ?? previewImage?.src}
				width="480"
				height="270"
				alt={previewAlt}
				loading="lazy"
				decoding="async"
			/>
		</figure>
	)}
	<div class="card-body">
		<header>
			<div class="meta">
				<span>{formattedDate}</span>
			</div>
			<h3>
				<a href={`/blog/${entry.slug}`}>{title}</a>
			</h3>
		</header>
		<p>{summary}</p>
		{tags.length > 0 && (
			<div class="tag-list" aria-label="Topics">
				{tags.map((tag) => (
					<span class="tag">{tag}</span>
				))}
			</div>
		)}
		<p class="card-cta">
			<a class="project-link" href={`/blog/${entry.slug}`}>Read article</a>
		</p>
	</div>
</article>

<style>
	.card-cta {
		margin-top: auto;
	}

</style>
