---
import type { CollectionEntry } from 'astro:content';

interface Props {
	entry: CollectionEntry<'blog'>;
}

const { entry } = Astro.props as Props;
const { title, summary, publishedAt, tags = [], previewImage, previewImageAlt } = entry.data;
const previewAlt = previewImageAlt ?? `${title} preview image`;
const formattedDate = new Intl.DateTimeFormat('en', {
	month: 'short',
	day: 'numeric',
	year: 'numeric',
}).format(publishedAt);
---

<article class="card">
	{previewImage && (
		<figure class="card-media">
			<img
				src={previewImage.src}
				width={previewImage.width}
				height={previewImage.height}
				alt={previewAlt}
				loading="lazy"
				decoding="async"
			/>
		</figure>
	)}
	<div class="card-body">
		<header>
			<div class="meta">
				<span>{formattedDate}</span>
			</div>
			<h3>
				<a href={`/blog/${entry.slug}`}>{title}</a>
			</h3>
		</header>
		<p>{summary}</p>
		{tags.length > 0 && (
			<div class="tag-list" aria-label="Topics">
				{tags.map((tag) => (
					<span class="tag">{tag}</span>
				))}
			</div>
		)}
		<p class="card-cta">
			<a class="project-link" href={`/blog/${entry.slug}`}>Read article</a>
		</p>
	</div>
</article>

<style>
	.card-cta {
		margin-top: auto;
	}

	.project-link {
		font-size: 0.8rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.12em;
		color: var(--color-muted);
		border-bottom: 1px solid rgba(148, 163, 184, 0.24);
		padding-bottom: 0.25rem;
	}

	.project-link:hover,
	.project-link:focus-visible {
		color: var(--color-accent);
		border-color: rgba(56, 189, 248, 0.4);
	}
</style>
