---
import type { CollectionEntry } from 'astro:content';

interface Props {
	entry: CollectionEntry<'projects'>;
}

const { entry } = Astro.props as Props;
const {
	title,
	description,
	tech = [],
	publishedAt,
	links,
	featured = false,
} = entry.data;

const formattedDate = new Intl.DateTimeFormat('en', { month: 'short', year: 'numeric' }).format(
	publishedAt
);
---

<article class="card">
	<header>
		<div class="meta">
			<span>{formattedDate}</span>
			{featured && <span class="pill">Featured</span>}
		</div>
		<h3>
			<a href={`/projects/${entry.slug}`}>{title}</a>
		</h3>
	</header>
	<p>{description}</p>
	{tech.length > 0 && (
		<div class="tag-list" aria-label="Technology used">
			{tech.map((item) => (
				<span class="tag">{item}</span>
			))}
		</div>
	)}
	<footer class="project-links">
		<a class="project-link" href={`/projects/${entry.slug}`}>View project</a>
		{links?.live && (
			<a class="project-link" href={links.live} rel="noopener noreferrer" target="_blank">
				Live demo
			</a>
		)}
		{links?.source && (
			<a class="project-link" href={links.source} rel="noopener noreferrer" target="_blank">
				Source
			</a>
		)}
	</footer>
</article>

<style>
	.project-links {
		display: flex;
		flex-wrap: wrap;
		gap: 0.85rem;
		margin-top: auto;
	}

	.project-link {
		font-size: 0.8rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.12em;
		color: var(--color-muted);
		border-bottom: 1px solid rgba(148, 163, 184, 0.24);
		padding-bottom: 0.25rem;
	}

	.project-link:hover,
	.project-link:focus-visible {
		color: var(--color-accent);
		border-color: rgba(56, 189, 248, 0.4);
	}
</style>
