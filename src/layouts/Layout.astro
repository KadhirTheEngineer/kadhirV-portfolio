---
import '../styles/global.css';

interface Props {
	title?: string;
	description?: string;
}

const {
	title = "Kadhir Vivekanandan's Portfolio",
	description = 'just a chill guy documenting his chill projects and experiences',
} = Astro.props as Props;

const navLinks = [
	{ href: '/', label: 'Home' },
	{ href: '/projects', label: 'Projects' },
	{ href: '/experience', label: 'Experience' },
	{ href: '/blog', label: 'Blog' },
];

const currentYear = new Date().getFullYear();
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
	</head>
	<body>
		<header class="site-header">
			<div class="container">
				<a class="brand" href="/">KadhirTheEngineer</a>
				<nav aria-label="Primary">
					<ul>
						{navLinks.map((link) => (
							<li>
								<a href={link.href}>{link.label}</a>
							</li>
						))}
					</ul>
				</nav>
			</div>
		</header>
		<main class="site-main">
			<slot />
		</main>
			<footer class="site-footer">
				<div class="container">
					<p>{currentYear}: Kadhir Vivekanandan's Portfolio. Built with Astro.</p>
				<p>
					<a href="mailto:kadhir.vivek@gmail.com">kadhir.vivek@gmail.com</a>
				</p>
			</div>
		</footer>
	</body>
</html>
